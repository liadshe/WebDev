<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Edit Profile - <%= profile.name %></title>
<link rel="stylesheet" href="/style.css">
</head>
<body class="edit-profile-page">
<div class="container">
    <h1 class="title-h1">
        Edit Profile: <%= profile.name %>
    </h1>

<div class="card-bg profile-card-shadow">
    <div class="flex-container">
        <div class="col-left">
            <img id="current-profile-picture" 
                    src="<%= "/images/" + (profile.picture || 'default.png') %>" 
                    alt="<%= profile.name %>">  
                    <button id="open-picture-modal">
                Change Avatar
            </button>                                
        </div>
            <div class="col-right">
                <section style="text-align: left;">
                    <h3>Update Profile Name</h3>
                    <form action="/profile/update/<%= profile.id %>" method="POST">
                        <input type="hidden" name="action" value="update_name">
                        <input type="text" id="displayName" name="displayName" 
                                value="<%= profile.displayName || profile.name %>" 
                                required minlength="2" maxlength="50"
                                placeholder="Enter new display name">
                        <button type="submit" class="btn">
                            Save Name
                        </button>
                    </form>
                </section>

<section style="text-align: left;">
  <h3>Genres Preferences</h3>
  <form action="/profile/update/<%= profile.id %>" method="POST">
    <input type="hidden" name="action" value="update_preferences">

    <% 
      const availablePreferences = [
        'G', 'PG', 'PG-13', 'R', 
        'Spanish Subtitles', 'English Subtitles', 
        'Audio Descriptions', 'Action', 'Comedy', 'Drama', 
        'Thriller', 'Horror', 'Sci-Fi', 'Romance'
      ];
      const currentPreferences = profile.preferences || [];
    %>

    <!-- scrollable box -->
    <div class="pref-box">
      <% availablePreferences.forEach(pref => { %>
        <label class="pref-label">
          <input type="checkbox" name="preferences" value="<%= pref %>" 
                 <%= currentPreferences.includes(pref) ? 'checked' : '' %>>
          <span class="text-sm font-medium text-white"><%= pref %></span>
        </label>
      <% }); %>
    </div>

    <button type="submit" class="btn" style="align-self: flex-start;">
      Save Preferences
    </button>
  </form>
</section>
            </div>
        </div>

        <div>
            <form action="/profile/delete/<%= profile.id %>" method="POST" onsubmit="return confirmDelete()" style="display: inline-block;">
                <input type="hidden" name="action" value="delete_profile">
                <button type="submit" class="btn-danger">
                    Permanently delete this profile and its viewing history
                </button>
            </form>
        </div>

    </div>
</div>

<div id="picture-modal">
    <div class="modal-content">
        <h3 class="text-2xl font-bold mb-6 text-white">Select New Avatar</h3>
        <% 
            const availableAvatars = ['cow.jpg', 'horse.jpg', 'mouse.jpg', 'pig.jpg'];
        %>

        <div class="avatar-grid">
            <% availableAvatars.forEach(avatar => { %>
                <div style="position: relative;">
                    <img src="<%= "/images/" + avatar %>" 
                            alt="<%= avatar %>" 
                            data-picture-name="<%= avatar %>"
                            class="avatar-select <%= profile.picture === avatar ? 'selected' : '' %>">
                </div>
            <% }); %>
        </div>

        <div style="display: flex; justify-content: flex-end; column-gap: 1rem; margin-top: 1.5rem;">
            <button id="close-picture-modal" class="btn-secondary">Cancel</button>
            <form id="picture-update-form" action="/profile/update/<%= profile.id %>" method="POST" style="display: inline-block;">
                <input type="hidden" name="action" value="update_picture">
                <input type="hidden" name="newPicture" id="new-picture-input">
                <button type="submit" id="save-picture-btn" class="btn-secondary" disabled>
                    Save New Picture
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    // *** Client-Side Scripting for Interactivity ***

    // Simple confirmation before deleting the profile
    function confirmDelete() {
        // As per instructions, using a prompt for deletion confirmation.
        const isConfirmed = window.prompt("To confirm deletion, type 'DELETE' in the box below:");
        return isConfirmed === 'DELETE';
    }

    // Modal Logic for Profile Picture Selection
    const pictureModal = document.getElementById('picture-modal');
    const openModalBtn = document.getElementById('open-picture-modal');
    const closeModalBtn = document.getElementById('close-picture-modal');
    const savePictureBtn = document.getElementById('save-picture-btn');
    const newPictureInput = document.getElementById('new-picture-input');
    const avatarSelectors = document.querySelectorAll('.avatar-select');
    let selectedPicture = "<%= profile.picture %>"; // Initialize with current picture

    // Open Modal
    openModalBtn.addEventListener('click', () => {
        pictureModal.classList.remove('hidden');
        pictureModal.classList.add('flex');
        savePictureBtn.disabled = true; // Disable until a new picture is selected
        newPictureInput.value = ""; // Clear selection on opening
    });

    // Close Modal
    closeModalBtn.addEventListener('click', () => {
        pictureModal.classList.add('hidden');
        pictureModal.classList.remove('flex');
    });

    // Handle Avatar Selection
    avatarSelectors.forEach(img => {
        img.addEventListener('click', () => {
            const pictureName = img.dataset.pictureName;
            
            // Remove 'selected' class and border from all, then add to the selected one
            avatarSelectors.forEach(i => {
                i.classList.remove('selected');
                i.style.borderColor = 'transparent';
            });

            img.classList.add('selected');
            img.style.borderColor = 'var(--color-red-600)';

            // Update form data and enable button
            selectedPicture = pictureName;
            newPictureInput.value = pictureName;
            savePictureBtn.disabled = false;
        });
    });

    // Set the initial selected picture border when the modal opens
    document.addEventListener('DOMContentLoaded', () => {
        const currentPictureName = "<%= profile.picture %>";
        const currentImg = document.querySelector(`.avatar-select[data-picture-name="${currentPictureName}"]`);
        if (currentImg) {
            // Ensure the current image has the selection style on load
            currentImg.classList.add('selected');
            currentImg.style.borderColor = 'var(--color-red-600)';
        }
    });
</script>
</body>
</html>
