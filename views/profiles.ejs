<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Profiles</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/profiles.css"/>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

  </head>
  <body class="profiles-page">
   <h1>Who‚Äôs watching?</h1>
<div class="profiles">
  <% if (profiles && profiles.length > 0) { %>
    <% profiles.forEach(profile => { %>
      <div class="profile" data-id="<%= profile._id %>">
        <a href="/profiles/set/<%= profile._id %>">
          <img src="/images/<%= profile.picture || 'default.jpg' %>" alt="<%= profile.name %>">
        </a>

        <input type="text" value="<%= profile.name %>" class="profile-name" readonly />

        <div class="profile-actions">
          <button class="edit-btn" title="Edit name">‚úèÔ∏è</button>
          <button class="save-btn" style="display:none;" title="Save changes">üíæ</button>
          <button class="cancel-btn" style="display:none;" title="Cancel edit">‚úñÔ∏è</button>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p class="no-profiles">No profiles found.</p>
  <% } %>
</div>

  <script src="js/profiles.js"> </script>
</html>
