<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Profiles</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body class="profiles-page">
    <h1>Who's watching?</h1>
    <div class="profiles">
      <% if (profiles && profiles.length > 0) { %> <%
      profiles.forEach(function(profile) { %>
      <div class="profile">
        <a href="/profiles/set/<%= profile._id %>">
          <img
            src="/images/<%= profile.picture || 'default.jpg' %>"
            alt="<%= profile.name %>"
          />
        </a>
        <input
          type="text"
          value="<%= profile.name %>"
          class="profile-name"
          readonly
        />
      </div>
      <% }); %> <% } else { %>
      <p>No profiles found.</p>
      <% } %>
    </div>
  </body>
</html>
